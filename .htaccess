# RewriteRule ^user/([^/]+)/?$ profile.php?username=$1 [L,QSA]
# RewriteRule ^category/([^/]+)/?$ index.php?category=$1 [L,QSA]

# Force HTTPS (Uncomment if you have SSL)
# RewriteCond %{HTTPS} off
